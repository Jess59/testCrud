<!DOCTYPE html>

{% extends 'base.html.twig' %}


{% block body %}
    <main>
        <form action="{{ path('app_inscription_traiter') }}" method="post">

            <label for="nomCircuit">Nom du circuit : </label>
            <input type="text" id="nomCircuit" name="nomCircuit" class="form-control" required>

            <label for="informationsParcours">Informations du parcours : </label>
            <textarea id="informationsParcours" name="informationsParcours" rows="5" class="form-control" required></textarea>

            <label for="dateHeureDepart">Date et heure de départ : </label>
            <input type="datetime-local" id="dateHeureDepart" name="dateHeureDepart" class="form-control" required>

            <label for="ateliersBienEtre">Ateliers bien être : </label>
            <input type="checkbox" id="ateliersBienEtre" name="ateliersBienEtre" class="form-control">

            <label for="nbParticipantes">Nombre de participantes : </label>
            <input type="number" id="nbParticipantes" name="nbParticipantes" min="1" class="form-control" required>

            <button type="submit" class="btn btn-primary">Valider</button>

        </form>
    </main>


{% endblock %}